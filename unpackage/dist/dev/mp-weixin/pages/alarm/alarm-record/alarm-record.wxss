
.page-header{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	width: 750rpx;
	height: 120rpx;
	background-color: #008dff;
	font-size: 28rpx;
	line-height: 28rpx;
	padding-left: 30rpx;
	padding-right: 30rpx;
	box-sizing: border-box;
	position: fixed;
	top: 0;
	z-index: 10;
}.iconfont{
	font-size: 50rpx;
	color: #F9FAFB ;
}.page-title{
	font-size: 32rpx;
	font-weight: 500;
	color: #F9FAFB;
}.blank{
	width: 60rpx;
	height: 60rpx;
}.placeholder{
	width: 750rpx;
	height: 30rpx;
}


.record-page{
	background-color: #f0f3f6;
	color: #4e6070;
	font-size: 24rpx;
}
.record-lists{
	padding: 0 32rpx;
	margin-top: 68rpx;
}
.list{
	width: 684rpx;
	height: 372rpx;
	border-radius: 14rpx;
	border: 1px solid rgba(187, 187, 187, 1);
	margin-top: 30rpx;
	background-color: #FFFFFF;
}
.record-type{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	height: 86rpx;
	border-bottom: 1rpx solid #CCCCCC;
	padding: 10rpx 20rpx;
	border-radius: 14rpx 14rpx 0 0;
}
.icon{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.record-content{
	height: 140rpx;
	padding: 20rpx;
}
.record-detail{
	border-top: 1rpx #CCCCCC solid;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding: 20rpx;
}

