
.page-header{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	width: 750rpx;
	height: 120rpx;
	background-color: #008dff;
	font-size: 28rpx;
	line-height: 28rpx;
	padding-left: 30rpx;
	padding-right: 30rpx;
	box-sizing: border-box;
	position: fixed;
	top: 0;
	z-index: 10;
}.iconfont{
	font-size: 50rpx;
	color: #F9FAFB ;
}.page-title{
	font-size: 32rpx;
	font-weight: 500;
	color: #F9FAFB;
}.blank{
	width: 60rpx;
	height: 60rpx;
}.placeholder{
	width: 750rpx;
	height: 30rpx;
}


.content {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	overflow: hidden;
	background-color: #eff2f5;
}
.iconfont{
	color: #0191fb;
}
.alarm-msg,
.alarm-left {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.msg-list {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	font-size: 28rpx;
	width: 480rpx;
}
.alarm-content {
	margin-right: 20rpx;
	overflow: hiddren;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.alarm-time {
	font-size: 24rpx;
	color: #C0C0C0;
}
.message {
	color: #0191fb;
	font-size: 80rpx !important;
}
.arrow-right {
	font-size: 40rpx !important;
	color: #C0C0C0;
}
.content-box {
	width: 100%;
	margin-bottom: 100rpx;
	overflow: hidden;
}
.box {
	width: 100%;
	margin-top: 20rpx;
	background-color: #FFFFFF;
	width: 100%;
	padding: 20rpx 20rpx;
	box-sizing: border-box;
}
.type {
	display: -webkit-box;
	display: flex;
	display: -webkit-flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
	margin: 20rpx 0 20rpx 0;
}
.type view {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	font-size: 28rpx;
}
.iconfont {
	font-size: 60rpx;
}

