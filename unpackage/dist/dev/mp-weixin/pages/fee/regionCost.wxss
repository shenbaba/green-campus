
.page-header{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	width: 750rpx;
	height: 120rpx;
	background-color: #008dff;
	font-size: 28rpx;
	line-height: 28rpx;
	padding-left: 30rpx;
	padding-right: 30rpx;
	box-sizing: border-box;
	position: fixed;
	top: 0;
	z-index: 10;
}.iconfont{
	font-size: 50rpx;
	color: #F9FAFB ;
}.page-title{
	font-size: 32rpx;
	font-weight: 500;
	color: #F9FAFB;
}.blank{
	width: 60rpx;
	height: 60rpx;
}.placeholder{
	width: 750rpx;
	height: 30rpx;
}


.regionCost {
	background-color: #f0f3f6;
}
.all-region,
.days {
	padding: 20rpx 20rpx;
	background-color: #FFFFFF;
	margin-top: 20rpx;
}
.region-rank{
	padding: 20rpx 20rpx;
	background-color: #FFFFFF;
}
button{
	background-color: #40B1FF;
	font-size: 24rpx;
	color: #FFFFFF;
	width: 120rpx;
	height: 60rpx;
}
.region-select{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack:start;
	-webkit-justify-content:flex-start;
	        justify-content:flex-start;
	font-size: 24rpx;
	margin-top: 20rpx;
}
.region-select text{
	background-color: #b2defe;
	padding: 6rpx 8rpx;
	border-radius: 5rpx;
	color: #008dff;
	margin-bottom: 20rpx;
	margin-right: 40rpx;
}

